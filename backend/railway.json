{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "DOCKERFILE",
      "watchPatterns": [
        "/backend"
      ],
      "dockerfilePath": "backend/Dockerfile"
    },
    "deploy": {
      "numReplicas": 1,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }

  {
    "$schema": "https://railway.app/railway.schema.json",
    "server": "swoole",
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 4,
    "timeout": 60,
    "max_requests": 1000,
    "watchPatterns": [
        "/backend"
    ],
    "serve": [
      "public/index.php"
    ]
  }
  